<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="3"
    android:rowCount="3"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="0"
        android:layout_column="0"
        android:text=""
        android:onClick="UpdateState"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="0"
        android:layout_column="1"
        android:text=""

        android:onClick="UpdateState"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="0"
        android:layout_column="2"
        android:text=""
        android:onClick="UpdateState"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text=""
        android:onClick="UpdateState"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="1"
        android:text=""
        android:onClick="UpdateState"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="2"
        android:text=""
        android:onClick="UpdateState"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="0"
        android:text=""
        android:onClick="UpdateState"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="1"
        android:text=""
        android:onClick="UpdateState"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="2"
        android:text=""
        android:onClick="UpdateState"/>

</GridLayout>

    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_buttons"
        android:layout_above="@+id/mode"
        android:checkedButton="@+id/radio_easy"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio1"
            android:onClick="RadioButtonClick"/>
        <RadioButton android:id="@+id/radio_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio2"
            android:onClick="RadioButtonClick"/>
        <RadioButton android:id="@+id/radio_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio3"
            android:onClick="RadioButtonClick"/>
    </RadioGroup>

    <Button
        android:id="@+id/reset"
        android:text="@string/newgame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:onClick="NewGame"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/reset"
        android:layout_centerInParent="true"
        android:layout_margin="25dp"
        android:text="" />

    <Button
        android:id="@+id/mode"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text2"
        android:text="@string/switchmode"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="10dp"
        android:onClick="ChangeMode"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/mode1" />


</RelativeLayout>